//Start of code

// Include servo library
#include <Servo.h>

// Set up variables for scenes 1 -> 5.
// Scene 1.
// Winter cloud erupts from Tinkerbell's machine
Servo servo1;
const int buttonAPin = 8;
int buttonAState = 0;
int lastButtonAState = 0;
bool A = false;

// Scene 2.
// Winter cloud engulfs Pixie Hollow
Servo servo2;
const int buttonBPin = 9;
int buttonBState = 0;
int lastButtonBState = 0;
bool B = false;

// Scene 3.
// Tinkerbell flies to the Winter Woods to ask for help w/ the Winter Storm, breaking her wings in the process.
Servo servo3;
const int buttonCPin = 10;
int buttonCState = 0;
int lastButtonCState = 0;
bool C = false;

// Scene 4.
// Winter Woods fairies come to the rescue, and save Pixie Hollow + the Pixie Dust Tree from being covered in ice! Fairies protect it in frost
Servo servo4;
const int buttonDPin = 11;
int buttonDState = 0;
int lastButtonDState = 0;
bool D = false;

// Scene 5.
// Winter Woods and Warm Season communities are reunited, Periwinkle heals Tinkerbell's broken wing.
Servo servo5;
const int buttonEPin = 12;
int buttonEState = 0;
int lastButtonEState = 0;
bool E = false;

void setup() {
  // Servos 1 -> 5
  servo1.attach(1);
  pinMode(buttonAPin, INPUT);
  servo2.attach(2);
  pinMode(buttonBPin, INPUT);
  servo3.attach(3);
  pinMode(buttonCPin, INPUT);
  servo4.attach(4);
  pinMode(buttonDPin, INPUT);
  servo5.attach(5);
  pinMode(buttonEPin, INPUT);

  // Sets all the servos to their initial state/position
  servo1.write(0);
  servo2.write(0);
  servo3.write(0);
  servo4.write(0);
  servo5.write(0);

}

void loop() {
// SCENE 1 START
  buttonAState = digitalRead(buttonAPin);
    if (buttonAState != lastButtonAState) {
      if (buttonAState == HIGH) {
        A = true;
        servo1.write(0); 
        delay(30); 
      }
    }

// SCENE 2 START
    if (A== true) {
      buttonBState = digitalRead(buttonBPin);
      if (buttonBState != lastButtonBState) {
        if (buttonBState == HIGH) {
          B = true;
          servo2.write(0);
          delay(15);
        }
      }
    }

// SCENE 3 START
    if (B== true) {
      buttonCState = digitalRead(buttonCPin);
      if (buttonCState != lastButtonCState) {
        if (buttonCState == HIGH) {
          C = true;
          servo3.write(0);
          delay(15);
        }
      }
    }

// SCENE 4 START
    if (C== true) {
      buttonDState = digitalRead(buttonDPin);
      if (buttonDState != lastButtonDState) {
        if (buttonDState == HIGH) {
          D = true;
          servo4.write(0);
          delay(15);
        }
      }
    }

// SCENE 5 START
    if (D== true) {
      buttonEState = digitalRead(buttonEPin);
      if (buttonEState != lastButtonEState) {
        if (buttonEState == HIGH) {
          servo5.write(0);
          delay(5);
          servo5.write(0);
          delay(5);
          servo5.write(0);
          delay(5);
          servo5.write(0);
          delay(5);
          servo5.write(0);
          delay(5);
        }
      }
    }
}
// End of the code









